<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de ToDos</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .instance-label {
            position: fixed;
            top: 10px;
            right: 10px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 12px;
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="main-container">

        <div class="container">
            <h1>Lista de ToDos</h1>
    
            <!-- Formulario para agregar ToDos -->
            <form id="todoForm">
                <input type="text" id="todoInput" placeholder="Nueva tarea" required />
                <button type="submit">Agregar</button>
            </form>
    
            <h2>Tareas</h2>
            <ul id="todoList"></ul>
        </div>
        <br>
        <!-- Secci√≥n para la tarea intensiva en CPU -->
        <div class="cpu-task-container">
            <label for="iterations">N√∫mero de iteraciones:</label>
            <input type="number" id="iterations" placeholder="Ej. 10000000">
            <button onclick="runCpuIntensiveTask()" class="btn">Ejecutar tarea costosa en CPU</button>
            <p id="result"></p>
        </div>
    
        <!-- Etiqueta que muestra la instancia con el valor din√°mico -->
        <div class="instance-label">
            <span id="instanceText"><%= instanceId %></span>
        </div>
    </div>
    <script>
        const form = document.getElementById('todoForm');
        const todoList = document.getElementById('todoList');

        // Funci√≥n para obtener los ToDos desde el backend
        const fetchTodos = async () => {
            const response = await fetch('/todos');
            const todos = await response.json();
            todoList.innerHTML = '';
            todos.forEach((todo, index) => {
                const isCompleted = todo.startsWith('‚úÖ');
                const li = document.createElement('li');
                li.innerHTML = `
                    <span>${todo}</span>
                    <button class="complete-btn" onclick="completeTodo(${index}, '${todo}')">
                        ${isCompleted ? '‚Ü©Ô∏è' : '‚úî'}
                    </button>
                    <button class="delete-btn" onclick="deleteTodo(${index})">üóë</button>
                `;
                todoList.appendChild(li);
            });
        };

        fetchTodos();

        // Agregar tarea
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const todo = document.getElementById('todoInput').value;

            await fetch('/todos', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ task: todo }),
            });

            document.getElementById('todoInput').value = '';
            fetchTodos();
        });

        const completeTodo = async (index, task) => {
            const isCompleted = task.startsWith('‚úÖ');
            const url = `/todos/${index}/${isCompleted ? 'undo' : 'complete'}`;
            await fetch(url, { method: 'PUT' });
            fetchTodos();
        };

        const deleteTodo = async (index) => {
            await fetch(`/todos/${index}`, { method: 'DELETE' });
            fetchTodos();
        };
        function runCpuIntensiveTask() {
            const iterations = document.getElementById('iterations').value;
            if (!iterations) {
                alert("Por favor, introduce un n√∫mero de iteraciones.");
                return;
            }

            fetch(`/cpu-intensive-task?iterations=${iterations}`)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('result').innerText = data;
                })
                .catch(error => {
                    console.error("Error al ejecutar la tarea intensiva:", error);
                    document.getElementById('result').innerText = "Error al ejecutar la tarea.";
                });
        }
    </script>
</body>
</html>
